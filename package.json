{
  "name": "@transferwise/styleguide-components",
  "version": "3.0.4",
  "description": "TransfeWise AngularJS 1.x Styleguide Components",
  "license": "MIT",
  "scripts": {
    "pretest": "",
    "test": "npm run lint; npm run build; karma start karma-conf.js --single-run",
    "test:dev": "karma start karma-conf.dev.js --single-run",
    "prestart": "npm install",
    "start": "npm run less && webpack --watch;",
    "dev": "npm run copy:demo && live-server --port=1666 --open=demo/index.html",
    "build": "npm run less && webpack -p && npm run copy:demo;",
    "htmllint": "htmllint src/**/*.html; htmllint src/**/**/*.html; htmllint demo/**/*.html; exit 0",
    "jshint": "jshint src/**/*.js --exclude-path .jshintignore; exit 0",
    "eslint": "eslint src; exit 0",
    "lint": "npm run htmllint && npm run jshint && npm run eslint",
    "less": "lessc demo/**/*.less demo/css/examples.css",
    "copy:jquery": "cp node_modules/jquery/dist/jquery.min.js demo/lib/",
    "copy:angular": "cp node_modules/angular/angular.min.js demo/lib/",
    "copy:bootstrap": "cp node_modules/bootstrap/dist/js/bootstrap.min.js demo/lib/; cp node_modules/bootstrap/dist/css/bootstrap.css demo/lib/",
    "copy:flags": "cp node_modules/currency-flags/dist/currency-flags.css demo/lib/",
    "copy:fonts": "mkdir demo/fonts; cp node_modules/bootstrap/fonts/*.* demo/fonts; cp node_modules/transferwise-iconfont/fonts/*.* demo/fonts",
    "copy:demo": "mkdir demo/lib; npm run copy:jquery; npm run copy:angular; npm run copy:bootstrap; npm run copy:bootstrap; npm run copy:flags;",
    "webpack": "webpack --watch",
    "copy-files-to-dist": "mkdir -p dist && cp circle.yml package.json CHANGELOG.md README.md dist/",
    "deploy": "git-directory-deploy --directory dist --branch releases --username CircleCI --email circleci@transferwise.com",
    "deploy:demo": "gh-pages -d demo",
    "release-to-github": "release-to-github-with-changelog --branch=releases"
  },
  "repository": {
    "type": "git",
    "fullname": "transferwise/styleguide-components",
    "url": "https://github.com/transferwise/styleguide-components.git"
  },
  "keywords": [
    "AngularJS",
    "Bootstrap"
  ],
  "bugs": {
    "url": "https://github.com/transferwise/styleguide-components/issues"
  },
  "homepage": "https://github.com/transferwise/styleguide-components",
  "dependencies": {
    "angular": "^1.5.0",
    "jquery": "^3.2.1"
  },
  "devDependencies": {
    "angular-mocks": "^1.5.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "bootstrap": "git+https://github.com/transferwise/bootstrap.git",
    "currency-flags": "git+https://github.com/transferwise/currency-flags.git",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "git-directory-deploy": "^1.5.1",
    "gh-pages": "^1.1.0",
    "html-loader": "^0.5.1",
    "htmllint": "^0.6.0",
    "htmllint-cli": "0.0.6",
    "htmllint-loader": "^1.3.8",
    "jasmine-core": "^2.8.0",
    "jshint": "^2.9.5",
    "jshint-loader": "^0.8.4",
    "karma": "^0.13.21",
    "karma-chrome-launcher": "^0.2.2",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^0.5.5",
    "karma-firefox-launcher": "^0.1.7",
    "karma-jasmine": "^0.3.7",
    "karma-mocha-reporter": "^2.2.4",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-safari-launcher": "^1.0.0",
    "less": "^2.7.2",
    "live-server": "^1.1.0",
    "phantomjs-prebuilt": "^2.1.5",
    "release-to-github-with-changelog": "^1.1.5",
    "transferwise-iconfont": "git+ssh://git@github.com/transferwise/iconfont.git",
    "uglify-js": "^3.1.3",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.9.1"
  }
}
