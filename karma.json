{
  "basePath": "",
  "files": [
    "demo/lib/jquery.min.js",
    "demo/lib/bootstrap.min.js",
    "demo/lib/angular.min.js",
    "node_modules/angular-mocks/angular-mocks.js",

    "dist/js/styleguide-components.js",

    "src/**/*.spec.js"
  ],
  "exclude": [],
  "autoWatch": false,
  "frameworks": ["jasmine"],
  "browsers": [
    "PhantomJS"
  ],
  "reporters": ["coverage", "mocha"],
  "preprocessors": {
    "src/**/*.controller.js": ["coverage"]
  },
  "plugins": [
    "karma-phantomjs-launcher",
    "karma-jasmine",
    "karma-coverage",
    "karma-mocha-reporter"
  ],
  "coverageReporter": {
    "reporters": [{
      "type": "text",
      "dir": "build/coverage/",
      "file": "coverage.txt"
    },{
      "type": "cobertura",
      "dir": "build/coverage/",
      "file": "coverage.xml"
    }]
  },
  "mochaReporter": {
    "output": "minimal"
  }
}
